class Solution {
public:
    int strStr(string haystack, string needle) {
        int h_len = haystack.length();
        int n_len = needle.length();
        
        for(int i=0; i<=h_len-n_len; i++){
            if(haystack[i] == needle[0]){
                int j = 0, k = i;
                while(k < h_len && j < n_len){
                    if(haystack[k] == needle[j]){
                        k++;
                        j++;
                    }else
                        break;
                }
                if(j == n_len) return i;
            }
        }
        
        return -1;
    }
};
